{
  "name": "stx",
  "version": "0.1.0",
  "private": true,
  "description": "Syncthing helper CLI (pair folders, manage servers) via Syncthing REST API",
  "type": "module",
  "bin": {
    "stx": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "prepare": "husky",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "undici": "^6.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.20.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
